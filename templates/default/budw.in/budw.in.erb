server {
    listen 80;
    listen [::]:80;
    server_name budw.in www.budw.in;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    
    include snippets/ssl-params-budw.in.conf;

    ssl_certificate /etc/letsencrypt/live/budw.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/budw.in/privkey.pem;

    root /var/www/budw.in;

    index index.php index.html;

    server_name budw.in www.budw.in;

    location / {
        try_files $uri $uri/ =404;
    }

    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;

    location = /50x.html {
        root /var/www/budw.in;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~ /.well-known {
        allow all;
    }
}